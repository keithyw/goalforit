<div class="panel panel-primary col-sm-6" style="padding:0">
	<div class="panel-heading">
		<h1 class="title">Update Your Profile Up</h1>		
	</div>
	<div class="panel-body">
	<%= form_for @profile, :html => { :class => "form-horizontal" } do |f| %>
		<% if @profile.errors.any? %>
		<div class="alert alert-danger" role="alert">
			<ul>
				<% @profile.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
		<% end %>
		<div class="form-group">
			<%= f.label :username, class: "col-sm-2 control-label" %>
			<div class="col-sm-10">
				<%= f.text_field :username, class: "form-control", placeholder: "username" %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label "First Name", class: "col-sm-2 control-label" %>
			<div class="col-sm-10">
				<%= f.text_field :first_name, class: "form-control", placeholder: "first name" %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label "Last Name", class: "col-sm-2 control-label" %>
			<div class="col-sm-10">
				<%= f.text_field :last_name, class: "form-control", placeholder: "last name" %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :birthday, class: "col-sm-2 control-label" %>
			<div class="col-sm-10">
				<%= f.date_select :birthday, :start_year => 1900 %>
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<%= f.button "Save Profile", class: "btn btn-default" %>
			</div>
		</div>
	<% end %>
	</div>
</div>